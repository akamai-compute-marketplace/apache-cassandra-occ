[connection]
ssl = true
factory = cqlshlib.ssl.ssl_transport_factory
[ssl]
certfile= {{ cassandra_ssl_ca_directory }}/ca-crt
userkey = {{ cassandra_ssl_key_directory }}/{{ cassandra_data.server[count].instance.hostname }}.key
usercert = {{ cassandra_ssl_cert_directory }}/{{ cassandra_data.server[count].instance.hostname }}.crt
validate = true