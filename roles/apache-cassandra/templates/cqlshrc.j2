[connection]
ssl = true
factory = cqlshlib.ssl.ssl_transport_factory
[ssl]
certfile= /etc/cassandra/ssl/ca-crt
userkey = {{ cassandra_ssl_path }}/{{ cassandra_data.server[count].instance.hostname }}.key
usercert = {{ cassandra_ssl_path }}/{{ cassandra_data.server[count].instance.hostname }}.crt
validate = true